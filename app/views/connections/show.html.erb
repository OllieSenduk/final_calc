<div class="container">
    <h1><%= @connection.name %></h1>
    <ul>
        <% @connection.connection_years.each do |cy| %>
        <ul>
            <li>
                Year: <%= cy.year.name %>
            </li>
            <li>
                Current price : â‚¬<%= cy.price_euros %>
            </li>
            <li>
                KWH: <%= cy.kwh %>
            </li>
            <li>
                <%= link_to "delete", connection_year_path(cy), method: "DELETE" %>
            </li>
        </ul>
        <br>
        <br>
        <% end %>
    </ul>

    <% @years.each do |year| %>
    <div class="row mb-5">
        <b>Year: <%= year.name %></b>
        <%= simple_form_for([@connection, @connection_year]) do |f|%>
        <%= f.input :kwh %>
        <%= f.input :year_id, as: 'hidden', :input_html => { :value => year.id } %>

        <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
    </div>
    <% end %>
</div>